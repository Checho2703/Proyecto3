# Stage 1: Build the Angular application
FROM node:18 AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
# Asegúrate de que tu script 'build --prod' esté en package.json y sea para producción
RUN npm run build --prod

# Stage 2: Serve the application with Nginx
FROM nginx:alpine

# Elimina la configuración por defecto de Nginx
RUN rm /etc/nginx/conf.d/default.conf

# COPIA TU ARCHIVO NGINX.CONF PERSONALIZADO AQUÍ <-- ¡Línea crucial a añadir!
COPY nginx.conf /etc/nginx/conf.d/default.conf 

# Copia los archivos de la aplicación Angular compilados
COPY --from=build /app/dist/frontend /usr/share/nginx/html 

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]